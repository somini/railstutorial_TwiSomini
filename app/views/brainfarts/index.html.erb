<p id="notice"><%= notice %></p>

<h1>Listing Brainfarts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brainfarts.each do |brainfart| %>
      <tr>
        <td><%= brainfart.content %></td>
        <td><%= brainfart.user_id %></td>
        <td><%= link_to 'Show', brainfart %></td>
        <td><%= link_to 'Edit', edit_brainfart_path(brainfart) %></td>
        <td><%= link_to 'Destroy', brainfart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brainfart', new_brainfart_path %>
